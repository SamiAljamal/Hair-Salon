<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  <title></title>
  <title></title>
</head>
<body>
  <div class="jumbotron">
    @if (@Model.Count == 0)
    {
      <p>No Stylists have been added yet!</p>
    }
    else
    {
      <h2>Here is your list of stylists:</h2>
      <h3>Click on Stylist to view list of their Clients!</h3>
      <ul>
        @foreach (var item in Model)
        {
          <li><a href="/stylist/@item.GetId()">@item.GetName()</a>| <a href="/stylist/edit/@item.GetId()">Edit</a>| <a href="/stylist/delete/@item.GetId()">Delete</a></li>
        }
      </ul>
    }
  </div>
  <form action="/stylists/clearall" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit">Delete</button>
  </form>
  
  <p><a href="/">Back home</a></p>

</body>
</html>
